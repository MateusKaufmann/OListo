    function abrirModalEditarItem(itemId) {
      fetch(`/api/item/${itemId}`)
        .then(res => res.json())
        .then(item => {
          document.getElementById('modal-title').textContent = 'Editar Item';
          document.getElementById('item-id').value = item.id;
          document.getElementById('item-nome').value = item.nome;
          document.getElementById('item-categoria').value = item.categoria;
          document.getElementById('item-unidade').value = item.unidade_medida;
          document.getElementById('item-quantidade-ideal').value = item.quantidade_ideal;
          document.getElementById('item-percentual-alerta').value = item.percentual_alerta;
          document.getElementById('item-prioridade').value = item.prioridade;
          document.getElementById('item-consumo-mensuravel').checked = item.consumo_mensuravel;
          document.getElementById('modal-item').style.display = 'flex';
        })
        .catch(err => {
          console.error('Erro ao carregar item:', err);
          alert('Erro ao carregar dados do item');
        });
    }

    function fecharModalItem() {
      document.getElementById('modal-item').style.display = 'none';
    }

    function salvarItem() {
      const itemId = document.getElementById('item-id').value;
      const formData = {
        nome: document.getElementById('item-nome').value,
        categoria: document.getElementById('item-categoria').value,
        unidade_medida: document.getElementById('item-unidade').value,
        quantidade_ideal: parseFloat(document.getElementById('item-quantidade-ideal').value),
        percentual_alerta: parseFloat(document.getElementById('item-percentual-alerta').value),
        prioridade: parseInt(document.getElementById('item-prioridade').value),
        consumo_mensuravel: document.getElementById('item-consumo-mensuravel').checked
      };

      const url = itemId ? `/api/item/${itemId}` : '/api/item';
      const method = itemId ? 'PUT' : 'POST';

      fetch(url, {
        method: method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert(itemId ? 'Item atualizado com sucesso!' : 'Item adicionado com sucesso!');
          window.location.reload();
        } else {
          alert('Erro: ' + data.message);
        }
      })
      .catch(err => {
        console.error('Erro:', err);
        alert('Erro ao salvar item');
      });
    }

    function excluirItem(itemId, nomeItem) {
      if (!confirm(`Tem certeza que deseja excluir "${nomeItem}"?\n\nEsta a√ß√£o n√£o pode ser desfeita e todos os registros relacionados ser√£o perdidos.`)) {
        return;
      }

      fetch(`/api/item/${itemId}`, {
        method: 'DELETE'
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('Item exclu√≠do com sucesso!');
          window.location.reload();
        } else {
          alert('Erro ao excluir: ' + data.message);
        }
      })
      .catch(err => {
        console.error('Erro:', err);
        alert('Erro ao excluir item');
      });
    }

    document.addEventListener('DOMContentLoaded', function() {
